# ============================================================
# üåê AURA - Adaptive Unified Reading Assistant (Backend Config)
# ============================================================

# ------------------------------------------------------------
# üß† GENERAL APP SETTINGS
# ------------------------------------------------------------
APP_NAME=The AURA
APP_ENV=development           # use: development | production
APP_VERSION=1.0.0
BACKEND_PORT=8000
FRONTEND_URL=https://aura-three-phi.vercel.app

# ------------------------------------------------------------
# üîê AUTHENTICATION & SECURITY
# ------------------------------------------------------------
# Secret key for JWT token encryption
SECRET_KEY=your_super_secret_jwt_key_here

# JWT configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Optional: password salt rounds (used by bcrypt)
BCRYPT_ROUNDS=12

# ------------------------------------------------------------
# üßæ DATABASE CONFIGURATION
# ------------------------------------------------------------
# Default local SQLite database (safe for dev)
DATABASE_URL=sqlite:///./aura.db

# Example for PostgreSQL (Railway / Render / Supabase)
# DATABASE_URL=postgresql+psycopg2://username:password@hostname:5432/aura_db

# ------------------------------------------------------------
# üíå EMAIL CONFIGURATION (FastAPI-Mail)
# ------------------------------------------------------------
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_google_app_password_here
MAIL_FROM=your_email@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=True
MAIL_SSL=False

# ------------------------------------------------------------
# üß† AI / LLM PROVIDERS
# ------------------------------------------------------------
# OpenAI (for LLM-based features)
OPENAI_API_KEY=your_openai_api_key_here

# Groq (for ultra-fast LLaMA / Mixtral inference)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Ollama (for local inference)
OLLAMA_BASE_URL=http://localhost:11434

# Whisper (for speech-to-text)
WHISPER_MODEL=base

# ------------------------------------------------------------
# üßë‚Äçüíª MACHINE LEARNING SETTINGS
# ------------------------------------------------------------
# Optional paths to saved models (for ML endpoints)
MODEL_DIR=ml_models
CACHE_DIR=.cache

# ------------------------------------------------------------
# üì∏ OCR / VISION SETTINGS
# ------------------------------------------------------------
TESSERACT_PATH=/usr/bin/tesseract
IMAGE_UPLOAD_DIR=saved_files/uploads
MOOD_LOG_DIR=saved_files/mood_logs

# ------------------------------------------------------------
# üïí SCHEDULER / BACKGROUND TASKS
# ------------------------------------------------------------
# APScheduler runs reminders or notifications in background
SCHEDULER_INTERVAL_MINUTES=1

# ------------------------------------------------------------
# üì° FRONTEND INTEGRATION
# ------------------------------------------------------------
CORS_ORIGINS=["https://aura-three-phi.verce]()_
